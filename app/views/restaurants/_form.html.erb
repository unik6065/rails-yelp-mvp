<div class="w-50">
  <%= simple_form_for restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant.categories, selected: Restaurant.categories[0] %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>
</div>
