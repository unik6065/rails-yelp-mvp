<h1>Add review for <%= @restaurant.name %></h1>

<div class="review-container">
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 0..5, selected: 3 %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>
